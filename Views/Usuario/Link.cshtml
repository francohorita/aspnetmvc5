@model MateriasConUsuario

<main class="container">
  
  <div class="row">
    <div class="col-sm-8">
      <h2 class="mt-5">@ViewData["Title"]</h2>
    </div>
    <div class="col-sm-4">
      <a class="btn btn-secondary float-right mt-5" href="~/Navigation/@ViewBag.Section"><i class="fa fa-sign-out-alt"></i><span> Volver</span></a>
    </div>
  </div>

  <hr>

  <div class="row justify-content-center">
    <div class="col-md-12">

      <div class="card">

        <div class="card-header">@ViewData["SubTitle"]</div>

        <div class="card-body">

          <form action="~/ActionUsuarios/Link" method="post">

            <div class="form-group">
              <label for="materia">Materia</label>
              <select id="materia" name="materiaId" class="form-control">
                @foreach (var item in Model.Materias)
                {
                  <option value="@item.Id">@item.Nombre</option>
                }
              </select>
            </div>
            
            <div class="form-group">
              <input type="hidden" value="@ViewBag.MyUserType" name="myUserType">
              <button type="submit" name="Edit" class="btn btn-custom waves"><i class="fas fa-link"></i> Enlazar</button>
              <input type="hidden" name="UsuarioId" value="@Model.UserId">
            </div>

          </form>

        </div>

      </div>

    </div>
  </div>
  
</main>