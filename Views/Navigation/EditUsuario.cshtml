@model Usuarios

<main class="container">
  
  <div class="row">
    <div class="col-sm-8">
      <h2 class="mt-5">@ViewData["Title"]</h2>
    </div>
    <div class="col-sm-4">
      <a class="btn btn-secondary float-right mt-5" href="~/Navigation/Usuarios"><i class="fa fa-sign-out-alt"></i><span> Volver</span></a>
    </div>
  </div>

  <hr>

  <div class="row justify-content-center">
    <div class="col-md-12">

      <div class="card">

        <div class="card-header">@ViewData["SubTitle"]</div>

        <div class="card-body">

          <form action="~/ActionUsuarios/Edit" method="post">

            <div class="form-group">
              <label for="nombre">Nombre</label>
              <input type="text" class="form-control" name="nombre" value="@Model.Nombre" required>
            </div>

            <div class="form-group">
              <button type="submit" name="Edit" class="btn btn-custom waves"><i class="fa fa-pen"></i> Editar</button>
              <input type="hidden" name="id" value="@Model.Id">
            </div>

          </form>

        </div>

      </div>

    </div>
  </div>
  
</main>