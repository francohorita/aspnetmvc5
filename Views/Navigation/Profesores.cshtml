@model List<Usuarios>

<main class="container">
    <h1 class="mt-5">@ViewData["Title"]</h1>
    <hr>
    
    <table id="dataTable" class="table table-striped table-bordered" style="width: 100%">
        
        <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Legajo</th>
            <th>Mail</th>
        </tr>
        </thead>

        <tfoot>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Legajo</th>
            <th>Mail</th>
        </tr>
        </tfoot>

        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Apellido</td>
                <td>@item.Legajo</td>
                <td>@item.Mail</td>
            </tr>
        }
        </tbody>

    </table>
</main>