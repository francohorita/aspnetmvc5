@model List<Carreras>

<main class="container">
    
    <div class="row">
        <div class="col-sm-8">
            <h1 class="mt-5">@ViewData["Title"]</h1>
        </div>
        <div class="col-sm-4">
            <a class="btn btn-primary float-right mt-5" href="~/Navigation/AddCarreras"><i class="fas fa-plus-circle"></i><span> Crear</span></a>
        </div>
    </div>

    <hr>

    <table id="dataTable" class="table table-striped table-bordered" style="width: 100%">

        <thead>
        <tr>
            <th>Nombre</th>
            <th>Id</th>
            <th></th>
        </tr>
        </thead>

        <tfoot>
        <tr>
            <th>Nombre</th>
            <th>Id</th>
            <th></th>
        </tr>
        </tfoot>

        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Id</td>
                <td>
                    <a href="~/ActionCarreras/ShowCarrera?id=@item.Id" class="btn btn-light"><i class="fa fa-eye"></i></a>
                    <a href="~/ActionCarreras/EditCarrera?id=@item.Id" class="btn btn-light"><i class="fa fa-pen"></i></a>
                    <a href="~/ActionCarreras/DeleteCarrera?id=@item.Id" class="btn btn-ligh-danger" onclick="return confirm('¿Seguro que desea eliminar el registro?')"><i class="fa fa-trash-alt"></i></a>
                </td>
            </tr>
        }
        </tbody>

    </table>
</main>